<Window x:Class="TheBestTracker.UserInterface.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBestTracker.UserInterface"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid  Background="LightSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock  Grid.Row="0" x:Name="RegPassText"  Text="What's your login(Admin)?" Background="LightSlateGray" Foreground="White"  FontSize="15" 
                    HorizontalAlignment="Center" Margin="0" VerticalAlignment="Bottom"/>

        <TextBox x:Name="passInput"  Height="50" Width="250" Grid.Row="1"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock  Grid.Row="2" x:Name="RegLoginText"   Text="What's your pass(Pass)?"   Background="LightSlateGray" Foreground="White" FontSize="15" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <Button Content="Ok" Width="100" Height="50" Click="Button_ClickPass" Background="PaleVioletRed" Grid.Row="4" Foreground="White" FontSize="15"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox x:Name="loginInput" Grid.Row="3" Width="250" Height="50"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <DockPanel Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="1" Margin="5 25 5 5" Grid.Row="1">
            <Border>
                <Image Name="AdminImage" Source="Images/adminIcon.png" Stretch="Uniform" ></Image>
            </Border>
        </DockPanel>
    </Grid>
