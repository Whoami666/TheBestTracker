                                               TextAlignment="Center" Foreground="{Binding Path=ForegroundColor}" FontFamily ="Verdana"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

